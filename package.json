{
  "name": "poker-hands",
  "version": "1.0.0",
  "description": "A TypeScript project for analyzing poker hands",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && jest",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "ts-jest": "^29.0.3",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.18",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
