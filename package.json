{
  "name": "poker-hands",
  "version": "1.0.0",
  "description": "A TypeScript project for analyzing poker hands",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && jest",
    "test:rust": "cd src/rust && cargo test",
    "start": "node dist/index.js",
    "build:wasm": "cd src/rust && npm run build",
    "example:node": "npm run build:wasm && ts-node examples/node-wasm/index.ts"
  },
  "dependencies": {
    "ts-jest": "^29.0.3",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.18",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
